<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreditosActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIcon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bombeirinho_machadinho"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:background="#00BDFFD9"
            android:contentDescription="@string/bombeirinho"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/bombeiro_machadinha_1" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDesenvolvimento"
        android:layout_width="162dp"
        android:layout_height="132dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="108dp"


        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cardApoio"
        app:layout_constraintEnd_toStartOf="@+id/cardInformacoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardIcon" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardApoio"
        android:layout_width="165dp"
        android:layout_height="132dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="76dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/home"
        app:layout_constraintEnd_toEndOf="@+id/cardInformacoes"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cardDesenvolvimento"
        app:layout_constraintTop_toBottomOf="@+id/cardDesenvolvimento" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInformacoes"
        android:layout_width="165dp"
        android:layout_height="132dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="41dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cardApoio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardDesenvolvimento"
        app:layout_constraintTop_toBottomOf="@+id/cardIcon" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="242dp"
        android:layout_height="118dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_thin"
        android:text="@string/textoApresentacao"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@+id/cardIcon"
        app:layout_constraintTop_toTopOf="@+id/cardIcon"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="137dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/home"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/menu_inicial_verde" />

</androidx.constraintlayout.widget.ConstraintLayout>